https://leetcode.com/problems/find-the-score-difference-in-a-game/description/

class Solution {
public:
    int scoreDifference(vector<int>& nums) {
        int n = nums.size();
        long long score1 = 0, score2 = 0;
        int active = 0;
        for (int i = 0; i < n; i++) {
            if ((nums[i] & 1) ^ (i % 6 == 5)) {
                active ^= 1;
            }
            if (active == 0)
                score1 += nums[i];
            else
                score2 += nums[i];
            // (active == 0 ? first : second) += nums[i];
        }
        return score1 - score2;
    }
};
