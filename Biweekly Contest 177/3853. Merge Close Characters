https://leetcode.com/problems/merge-close-characters/description/

class Solution {
public:
    string mergeCharacters(string s, int k) {
        bool changed = true;
        while (changed) {
            changed = false;
            for (int i = 0; i < s.size(); i++) {
                for (int j = i + 1; j < s.size(); j++) {
                    if (s[i] == s[j] && j - i <= k) {
                        s.erase(j, 1);
                        changed = true;
                        break;     
                    }
                }
                if (changed)
                 break;
            }
        }
        return s;
    }
};
